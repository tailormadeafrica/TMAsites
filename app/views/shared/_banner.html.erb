<% if @location.present? and @location.gallery.present? and @location.gallery.items.present? %>
  <div class="master-slider ms-skin-default hidden-xs" id="masterslider">
    <% @location.gallery.items.reorder('position ASC').each do |item| %>
    <a href="#welcome"><div class="banner-overlay"><img class="img-responsive" src="/assets/banner-overlay-scroll.png"></div></a>
