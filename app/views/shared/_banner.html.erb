<% if @location.present? and @location.gallery.present? and @location.gallery.items.present? %>
  <div class="master-slider ms-skin-default" id="masterslider">
    <% @location.gallery.items.reorder('position ASC').each do |item| %>
    <a href="#welcome"><div class="banner-overlay hidden-xs"><img class="img-responsive" src="/assets/banner-overlay-scroll.png"></div></a>
      <div class="ms-slide slide-1" data-delay="4">
        <div class="overlay"></div>        
        <%= image_fu(item.image, "1920x935#c", :alt => item.image.alt_tag) %>
        <div class="ms-layer banner-text" data-type="text" data-delay="750" data-duration="2000" data-ease="easeOutExpo" data-resize="false">
          <% if @location.depth == 0 %>
            <h2>Discover</h2>
          <% end %>
          <h1><%= raw @location.name %></h1>
          <h3><%= @location.sub_name %></h3>
        </div>
        <img src="/assets/blank.gif" data-src="/assets/downarrow.png" class="ms-layer arrow hidden-xs" data-resize="false" data-type="image" data-delay="1500" data-duration="9000" data-ease="easeOutExpo" data-resize="false">
      </div>
    <% end %>
  </div>
