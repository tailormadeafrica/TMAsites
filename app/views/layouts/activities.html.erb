<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
  <% site_bar = render('/refinery/site_bar', :head => true) -%>
  <%= render '/refinery/head' %>
  <body id="container">
  


    <%= site_bar -%>
    <%= render '/refinery/ie6check' if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>

    <%= render '/refinery/header' -%>

    <%= render '/shared/banner' %>

    <% if action_name == "index" %>

      <% if @activities.present? %>
      <div id="welcome" class="search activities">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 div1">
                <h1>Experiences</h1>
                  <ul class=" list-inline list-unstyled">
                    <% @activities.each do |activity| %>
                      <li class="search-item">
                        <%= link_to(image_fu(activity.image, "80x80#c", :alt => activity.image.alt_tag),refinery.activities_activity_path(activity)) if activity.image.present? %>
                        <div class="search-item-body">
                          <h3><%= link_to strip_tags(activity.name), refinery.activities_activity_path(activity) %></h3>
                          <div class="description"><%=raw truncate(activity.description, :length => 120) %></div>
                        </div>
                      </li>
                    <% end %>
                  </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>   




    <% else %>

      <div id="welcome">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 div1">
              <p>
                <%=raw @activity.description %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <% if @activity.locations.present? %>
          <div class="locations-activities">
            <div class="container">
              <div class="row">
                <div class="col-xs-12">
                  <h1>Best Destinations </br><span>for <%= @activity.name %></span></h1>
                  <ul class="list-inline list-unstyled">
                    <% @activity.locations.each do |location| %>
                      <li>
                        <%= link_to(image_fu(location.cover_image, "80x80#c", :alt => location.cover_image.alt_tag), location_link(location)) if location.cover_image.present? %>
                        <h3><%= link_to strip_tags(location.name), location_link(location) %></h3>
                        <div class="description"><%=raw truncate(strip_tags(location.description), :length => 120) %></div>
                      </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
      <% end %>

      <% if @activity.accommodations.present? %>
        <div class="accommodations-activities">
          <div class="container">
            <div class="row">
              <div class="col-xs-12">
                <h1>Best Lodges </br><span>for <%= @activity.name %></span></h1>
                <ul class="list-inline list-unstyled">
                  <% @activity.accommodations.each do |accommodation| %>
                    <li>
                      <%= link_to(image_fu(accommodation.cover_image, "80x80#c", :alt => accommodation.cover_image.alt_tag), refinery.accommodations_accommodation_path(accommodation)) if accommodation.cover_image.present? %>
                      <h3><%= link_to strip_tags(accommodation.name), refinery.accommodations_accommodation_path(accommodation) %></h3>
                      <div class="description"><%=raw truncate(strip_tags(accommodation.description), :length => 120) %></div>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>


    <% end %>

    <%= render '/refinery/footer' -%>

    <%= render '/refinery/javascripts' %>
  </body>
</html>
