
<% if @posts.many? %>
<div class="blog_rhs">
  <h2><%= t('.other') %></h2>
  <ul id="blog_posts" class=" list-inline list-unstyled">
    <% @posts.each do |blog_post| %>
    <a href="<%=  refinery.blog_post_path(blog_post) %>">
      <li class="search-item">
          <%= image_fu(blog_post.image, "105x80#c", :alt => blog_post.image.alt_tag) %>
          <div class="search-item-body">
            <h3><%= strip_tags(blog_post.title) %></h3>
            <div class="description hidden-xs hidden-md"><%=raw blog_post_teaser(blog_post) %></div>
          </div>
      </li></a>
    <% end %>
  </ul>
  </div>
<% end %>









