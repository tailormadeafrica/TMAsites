
<% if @posts.many? %>
<div class="blog_rhs">
  <h2><%= t('.other') %></h2>
  <ul id="blog_posts">
    <% @posts.each do |blog_post| %>
      <li class='clearfix'>
          <%= link_to(image_fu(location.cover_image, "105x80#c") + location.name, refinery.locations_location_path(location)) %> 
      <div class="description"><%=raw truncate(blog_post.body, :length => 70) %></div>
      </li>
    <% end %>
  </ul>
  </div>
<% end %>









