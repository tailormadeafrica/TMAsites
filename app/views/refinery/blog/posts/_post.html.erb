<% flash.each do |key, value| %>
 <div id='flash' class="flash flash_<%= key %>">
   <%= value %>
 </div>
<% end %>
<article id="blog_post">
  <header>
    <%= image_fu(@post.image, "750x", :class=>"img-responsive") %>
    <h1><%= @post.title %></h1>


        <div class="details clearfix">
           <span class="date"><i class="fa fa-calendar-o"></i>&nbsp;&nbsp;<%= @post.published_at.strftime("%d %B %Y") %></span>&nbsp;&nbsp;|&nbsp;&nbsp;
          <% if @post.comments.any? %>
             <span class="comments"><i class="fa fa-comment-o"></i>&nbsp;&nbsp;<%= pluralize(@post.comments.approved.count, t('singular', :scope => 'refinery.blog.shared.comments')) %></span>
          <% else %>
                <span class="comments"><i class="fa fa-comment-o"></i>&nbsp;&nbsp;<%= t('none', :scope => 'refinery.blog.shared.comments') %></span>
          <% end %>
        </div>



  </header>
  <br/>
  <%= @post.body.html_safe %>

  <span class='st_twitter'></span>
  <span class='st_facebook'></span>
  <span class='st_pinterest'></span>
  <span class='st_linkedin'></span>
  <span class='st_' displayText=''></span>
<hr>
</article>


<% content_for :right do %>
  <% if @post.locations.present? %>
    <div class="blog_locations">
      <h2>Location</h2>
      <ul>
        <% @post.locations.each do |location| %>
          <li><%= link_to (image_fu location.cover_image, "75x75#c") + location.name, refinery.locations_location_path(location) %></li>
          <div class="description"><%=raw truncate(location.description, :length => 100) %></div></li>
          <div class="clear"></div>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if @post.accommodations.present? %>
    <div class="blog_locations">
      <h2>Accommodation</h2>
      <ul>
        <% @post.accommodations.each do |accommodation| %>
          <li><%= link_to (image_fu accommodation.cover_image, "75x75#c") + accommodation.name, refinery.accommodations_accommodation_path(accommodation) %>
          <div class="description"><%=raw truncate(accommodation.description, :length => 100) %></div></li>
          <div class="clear"></div>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if @post.activities.present? %>
    <div class="blog_locations">
      <h2>Activity</h2>
      <ul>
        <% @post.activities.each do |activity| %>
          <li><%= link_to (image_fu activity.cover_image, "75x75#c") + activity.name, refinery.activities_activity_path(activity) %></li>
          <div class="description"><%=raw truncate(activity.description, :length => 100) %></div></li>
          <div class="clear"></div>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>


<%= render :partial => '/refinery/draft_page_message' unless @post.nil? or @post.live? -%>

